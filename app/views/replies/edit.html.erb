<div class="title is-2 has-text-grey">Editing reply</div>
<%= simple_form_for([@discussion, @reply]) do |f| %>
    <div clas="field">
        <div class="control">
            <%= f.input :reply, input_html: { class: "textarea" }, 
                wrapper: false, label_html: { class: "lablel" } %>
        </div>
    </div>
    <br>
    <%= f.button :submit, "Update reply", class: "button is-info" %>
<% end %>